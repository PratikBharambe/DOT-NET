@model _07ViewModel.Models.Product

<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />


<h1>ProductDetails view from Home Controller</h1>

<div class="card m-5" style="width: 18rem;">
    <img src="~/Images/card.jpg" class="card-img-top" alt="Asus Laptop">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Price</p>
        <p class="card-text">Details of asus laptop</p>
        <a href="#" class="btn btn-outline-success">Add To Cart</a>
    </div>
</div>
<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>