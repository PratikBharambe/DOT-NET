

<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />


<h1>Index view from Home Controller</h1>

<div class="card m-5" style="width: 18rem;">
	<img src="~/Images/card.jpg" class="card-img-top" alt="Asus Laptop">
	<div class="card-body">
		@if (Model.Product != null)
		{
			<h5 class="card-title">@Model.Product.Name</h5>
			<p class="card-text">@Model.Message</p>
			@if (Model.InStock)
			{
				<p class="card-text">In Stock</p>
			}
			else
			{
				<p class="card-text">Out of Stock</p>
			}
			<a href="Home/ProductDetails/@Model.Product.Id" class="btn btn-outline-success">Product Details</a>
		}
		else
		{
			<p class="card-text">Error product is not avalibale</p>
		}

	</div>
</div>
<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
