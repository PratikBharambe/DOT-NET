@model IEnumerable<_14CodeFirstEntityFramework.Models.Employee>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
</div>

<div class="container">
	<a href="/Home/Create" class="btn btn-primary">Add New Employee</a>
</div>
<br />
<table class="table table-bordered table-striped table-responsive">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Address</th>
		<th colspan="3"></th>
	</tr>
	@foreach (var emp in Model)
	{
		<tr>

			<td>@emp.Id</td>
			<td>@emp.Name</td>
			<td>@emp.Address</td>
			<td>
				<a href="/Home/Edit/@emp.Id" class="btn btn-outline-primary">
					Edit
				</a>
			</td>
			<td>
				<a href="/Home/Delete/@emp.Id" class="btn btn-outline-danger">
					Delete
				</a>
			</td>
			<td>
				<a href="/Home/Details/@emp.Id" class="btn btn-outline-success">
					Details
				</a>
			</td>
		</tr>
	}

</table>